{
  // For more information, see: https://code.visualstudio.com/docs/editor/debugging#_launch-configurations
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Client",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}/client",
      "runtimeArgs": ["dev"],
      // Run vite dev server using `yarn dev` and then luanch chrome for debugging
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "Local:[ ]+http://127.0.0.1:([0-9]+)",
        "uriFormat": "http://localhost:%s"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}/server",
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Test File",
      "autoAttachChildProcesses": true,
      "cwd": "${workspaceFolder}/client",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["run", "../${relativeFile}"],
      "smartStep": true,
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Server/Client",
      "configurations": ["Server", "Client"]
    }
  ]
}
